<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- appender: ログの出力場所 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- pattern: ログのフォーマット -->
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <root>
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
